        <Label Content="Safe  Journey , Safe Life"  FontSize="36"  Foreground="White" VerticalAlignment="Top" Margin="152.165,163,0,0" FontFamily="Bodoni MT" FontStyle="Italic" FontWeight="Bold" HorizontalAlignment="Left" Width="439" Grid.Column="1"/>
